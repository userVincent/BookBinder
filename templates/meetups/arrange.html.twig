{% extends 'base.html.twig' %}

{% block title %} Arrange a Meetup {% endblock %}

{% block main %}

<h1>Arrange a Meetup</h1>

{% for library in libraries %}

<div class="library-card">
    <h2>{{ library.name }}</h2>
    <p>Longitude: {{ library.longitude }}</p>
    <p>Latitude: {{ library.latitude }}</p>
    <form method="post" action="{{ path('app_meetup_create', {user1Id: userId, user2Id: userId, libraryId: library.id}) }}">
        <button type="submit" class="btn btn-primary">Arrange Meetup</button>
    </form>
</div>

{% endfor %}

{% endblock %}

