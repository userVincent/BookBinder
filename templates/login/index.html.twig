{% extends 'base_login_register.html.twig' %}

{% block title %}Login{% endblock %}

{% block h1 %}Login to BookBinder{% endblock %}

{% block main_footer %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <main>
            <section>
                    <div class="profile">
                        <label for="username"><b>Email</b></label>
                        <input type="text" placeholder="Enter Username" name="_username" required id="username" value="{{ last_username }}">

                        <label for="password"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="_password" required id="password">

                        <button type="submit"><b>Sign in</b></button>

                        <label>
                            <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                    </div>
            </section>

        </main>

    </form>
    <br><br>
    <footer>
        <p>New to BookBinder? Create an account <a href="{{ path('app_register') }}"><b>here</b></a>.</p>
    </footer>
{% endblock %}


