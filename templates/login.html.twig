{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <header>
        <img src="Images/bookbinder_logo.png" width="100" alt="db layout"/>
        <div id="logo">
            <h1>Sign in to BookBinder</h1>
        </div>
    </header>

    <main>
        <section>
            <form action="{{ path('app_login') }}" method="post">

                <div class="profile">
                    <label for="username"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="_username" required id="username"
                           value="{{ last_username }}">

                    <label for="password"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="_password" required id="password">

                    <button type="submit"><b>Sign in</b></button>

                    <label>
                        <input type="checkbox" checked="checked" name="_remember"> Remember me
                    </label>
                </div>

            </form>
        </section>

        <footer>
            <h3>New to BookBinder? Create an account <a href="Register.html">here</a>!</h3>
        </footer>

    </main>
{% endblock %}
