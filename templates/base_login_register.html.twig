<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/login_register.css') }}">

        {{ encore_entry_link_tags('app') }}

    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
<script>
    // $(document).ready(function(){
    //     $('div.alert.alert-success').fadeIn().delay(3000).fadeOut();
    // });
    $(function() {
        $('#flash').delay(500).fadeIn('normal', function() {
            $(this).delay(2500).fadeOut();
        });
    });
</script>
{% for message in app.flashes('success') %}
    <div id="flash" class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

<header>
    <img src="{{ asset('images/logo.jpg') }}" width="100" alt="db layout"/>
    <div id="logo">
        <h1>{% block h1 %}Sign in to BookBinder{% endblock %}</h1>
    </div>
</header>

{% block main_footer %}{% endblock %}
</body>
</html>
