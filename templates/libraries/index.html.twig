{% extends 'base.html.twig' %}

{% block title %}Libraries Page{% endblock %}

{% block main %}
<div>
    <h1>Libraries</h1>
    <ul>
        {% for library in libraries %}
            <li>
                <h2>
                    <a href="{{ path('library_show', {id: library.id}) }}">
                        {{ library.name }}
                    </a>
                </h2>
                <p>Latitude: {{ library.latitude }}</p>
                <p>Longitude: {{ library.longitude }}</p>
            </li>
        {% else %}
            <li>No libraries available</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
