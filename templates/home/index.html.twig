{% extends 'base.html.twig' %}

{% block title %}BookBinder_Home{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block main %}
    <h2>Find Books and Book Lovers!!</h2>
    <section>
        <form action="/action_page.php">
            <div class="wrapper">
                <img class="search-icon" src="data:image/svg+xml;utf8;base64," />
                <input class="search" placeholder="Search Books" type="text">
            </div>
        </form>
    </section>

    <section id="trending-books">
        <h2>Trending Books</h2>
        <div>
            {% for book in trending_books %}
                <div class="book" style="display: flex; width: 100%; margin-bottom: 20px;">
                    <div class="placeholder-image" style="flex: 0 0 30%; height: 200px; background-color: gray; margin-right: 20px;"></div>
                    <div class="book-info" style="flex: 1;">
                        <h3>Title: {{ book.title }}</h3>
                        <p>Author: {{ book.author }}</p>
                        <p>ISBN: {{ book.ISBN }}</p>
                        <p>Pages: {{ book.pages }}</p>
                        <p>Language: {{ book.language }}</p>
                        <p>Rating: {% if book.rating %}{{ book.rating }}{% else %}N/A{% endif %}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <aside>
        <article>
        </article>
        <article>
        </article>
    </aside>
{% endblock %}